# TikTok Credentials (not needed for browser automation)
# TIKTOK_CLIENT_KEY=your_client_key
# TIKTOK_CLIENT_SECRET=your_client_secret

# Configuration
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_PASSWORD=your_tiktok_password

# Scheduling (cron format: minute hour * * *)
SCHEDULE_TIME_1=0 10 * * *
SCHEDULE_TIME_2=0 18 * * *

# Hashtags (comma separated)
HASHTAGS=#gruppoclasse,#mamme,#scuola,#perle,#gruppiwhatsapp,#genitori,#divertente

# Video Settings
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_DURATION=15

# TTS Settings (it-IT for Italian)
TTS_LANGUAGE=it-IT
TTS_VOICE_SPEED=1.0

# Scraping
GRUPPOCLASSE_URL=https://gruppoclasse.it

# Paths
DATA_DIR=./data
VIDEOS_DIR=./videos
LOGS_DIR=./logs
